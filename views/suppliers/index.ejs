<!DOCTYPE html>
<html lang="en">
<head>
    <title>Suppliers</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="container mt-5">
    <div class="d-flex justify-content-between mb-3">
        <h2>Supplier List</h2>
        <a href="/suppliers/create" class="btn btn-warning">Add Supplier</a>
    </div>
    <a href="/" class="mb-3 d-block">Back to Home</a>

    <table class="table table-striped">
        <thead><tr><th>Company</th><th>Contact</th><th>Status</th><th>Actions</th></tr></thead>
        <tbody>
            <% suppliers.forEach(s => { %>
                <tr>
                    <td><%= s.company_name %></td>
                    <td><%= s.contact_person %></td>
                    <td><%= s.status %></td>
                    <td>
                        <a href="/suppliers/<%= s.id %>/edit" class="btn btn-sm btn-info">Edit</a>
                        <form action="/suppliers/<%= s.id %>?_method=DELETE" method="POST" style="display:inline;">
                            <button class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</body>
</html>