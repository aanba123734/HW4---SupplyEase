<!DOCTYPE html>
<html lang="en">
<head>
    <title>Purchase Requests</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="container mt-5">
    <div class="d-flex justify-content-between mb-3">
        <h2>Purchase Requests List</h2>
        <a href="/purchase/create" class="btn btn-primary">Create New PR</a>
    </div>
    <a href="/" class="mb-3 d-block">Back to Home</a>

    <table class="table table-bordered">
        <thead><tr><th>PR No</th><th>Item</th><th>Qty</th><th>Status</th><th>Actions</th></tr></thead>
        <tbody>
            <% prs.forEach(pr => { %>
                <tr>
                    <td><%= pr.pr_number %></td>
                    <td><%= pr.item_name %></td>
                    <td><%= pr.quantity %> <%= pr.unit %></td>
                    <td><%= pr.status %></td>
                    <td>
                        <a href="/purchase/<%= pr.id %>/edit" class="btn btn-sm btn-info">Edit</a>
                        <form action="/purchase/<%= pr.id %>?_method=DELETE" method="POST" style="display:inline;">
                            <button class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</body>
</html>